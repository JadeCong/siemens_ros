<launch>
    
    <group ns="siemens">
        <!-- Run rqt_reconfigure for force mapping parameters -->
        <node name="rqt_reconfigure" pkg="rqt_reconfigure" type="rqt_reconfigure" required="false" />
        
        <!-- Run master_slave_force_mapping node -->
        <rosparam command="load" file="$(find siemens_plc)/config/siemens_plc_configurator.yaml" />
        <node name="siemens_plc_configurator" pkg="siemens_plc" type="siemens_plc_configurator.py" output="screen" respawn="false" />
    </group>
    
</launch>